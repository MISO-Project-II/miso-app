<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView04"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/TitleGeo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Datos Demograficos"
            android:textColor="@color/orange"
            android:textSize="20sp"
            android:layout_margin="16dp"
            android:padding="8dp"
            android:background="@drawable/title_rounded"/>

        <TextView
            android:id="@+id/placeBirth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lugar de nacimiento"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginStart="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/country"
                android:layout_width="0sp"
                android:layout_weight=".50"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Colombia"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginStart="8dp"
                android:background="@drawable/input_rounded"/>
            <TextView
                android:id="@+id/city"
                android:layout_width="0sp"
                android:layout_weight=".50"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Bogotá"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/input_rounded"/>
        </LinearLayout>

        <TextView
            android:id="@+id/placeResidence"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lugar de residencia"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/countryResidence"
                android:layout_width="0sp"
                android:layout_weight=".50"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Colombia"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginStart="8dp"
                android:background="@drawable/input_rounded"/>
            <TextView
                android:id="@+id/cityResidence"
                android:layout_width="0sp"
                android:layout_weight=".50"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Bogotá"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/input_rounded"/>
        </LinearLayout>

        <TextView
            android:id="@+id/timeResidencelabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tiempo de residencia"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16sp"/>
        <TextView
            android:id="@+id/timeResidence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="30 años"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginStart="8dp"
            android:paddingEnd="15sp"
            android:background="@drawable/input_rounded"/>
    </LinearLayout>
</ScrollView>