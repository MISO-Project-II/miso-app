<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView03"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/TitlePreferredFoods"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alimentos de preferencia"
            android:textColor="@color/orange"
            android:textSize="20sp"
            android:layout_margin="16dp"
            android:padding="8dp"
            android:background="@drawable/title_rounded"/>

        <TextView
            android:id="@+id/food1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jugos"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginStart="16dp"/>
        <TextView
            android:id="@+id/food2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Carnes"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginStart="16dp"/>
        <TextView
            android:id="@+id/food3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Granos"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginStart="16dp"/>

        <TextView
            android:id="@+id/TitleAllergiesFoods"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alergias"
            android:textColor="@color/orange"
            android:textSize="20sp"
            android:layout_margin="16dp"
            android:padding="8dp"
            android:background="@drawable/title_rounded"/>

        <TextView
            android:id="@+id/allergie1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Huevos"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginStart="16dp"/>

        <TextView
            android:id="@+id/allergie2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Pescado"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginStart="16dp"/>

        <TextView
            android:id="@+id/allergie3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="ManÃ­"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginStart="16dp"/>

        <TextView
            android:id="@+id/TitleIntoleranceFoods"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Intolerancia"
            android:textColor="@color/orange"
            android:textSize="20sp"
            android:layout_margin="16dp"
            android:padding="8dp"
            android:background="@drawable/title_rounded"/>

        <TextView
            android:id="@+id/intolerance1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Lacteos"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginStart="16dp"/>

    </LinearLayout>
</ScrollView>